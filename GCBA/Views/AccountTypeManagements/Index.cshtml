@model IEnumerable<GCBA.Models.AccountTypeManagement>


@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Account Configuration</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.IsOpened)
        </dt>

        <dd>
            @if (Model.)
            {
                @Html.DisplayName("Open")
            }
            else
            {
                @Html.DisplayName("Closed")
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FinancialDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FinancialDate)
        </dd>
    </dl>
    <hr />
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="background-color:white; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:large">
        @*<thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Age
                    </th>
                </tr>
            </thead>*@
        <tbody>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.SavingsCreditInterestRate)
                </td>

                <td>
                    @Html.DisplayFor(model => model.SavingsCreditInterestRate)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.SavingsMinimumBalance)
                </td>

                <td>
                    @Html.DisplayFor(model => model.SavingsMinimumBalance)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayName("Savings Interest Expense GL Account")
                </td>

                <td>
                    @if (Model.SavingsInterestExpenseGl == null)
                    {
                        @Html.DisplayName("Not Configured")
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.SavingsInterestExpenseGl.AccountName)
                    }
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayName("Savings Interest Payable GL Account")
                </td>

                <td>
                    @if (Model.SavingsInterestPayableGl == null)
                    {
                        @Html.DisplayName("Not Configured")
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.SavingsInterestPayableGl.AccountName)
                    }
                </td>
            </tr>
            <tr>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.CurrentCreditInterestRate)
                </td>

                <td>
                    @Html.DisplayFor(model => model.CurrentCreditInterestRate)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.CurrentMinimumBalance)
                </td>

                <td>
                    @Html.DisplayFor(model => model.CurrentMinimumBalance)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.CurrentCot)
                </td>

                <td>
                    @Html.DisplayFor(model => model.CurrentCot)
                </td>
            </tr>
            <tr>
                <td>@Html.DisplayName("Current Cot Income GL Account")</td>
                <td>
                    @if (Model.CurrentCotIncomeGl == null)
                    {
                        @Html.DisplayName("Not Configured")
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.CurrentCotIncomeGl.AccountName)
                    }
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayName("Current Interest Expense GL Account")</td>
            <td>
                @if (Model.CurrentInterestExpenseGl == null)
                {
                    @Html.DisplayName("Not Configured")
                }
                else
                {
                    @Html.DisplayFor(model => model.CurrentInterestExpenseGl.AccountName)
                }
            </td>
        </tr>
        <tr>
            <td></td>
            <td></td>
        </tr>

                {
                    @Html.DisplayFor(model => model.LoanInterestExpenseGl.AccountName)
                }
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayName("Loan Interest Income GL Account")</td>
            <td>
                @if (Model.LoanInterestIncomeGl == null)
                {
                    @Html.DisplayName("Not Configured")
                }
                else
                {
                    @Html.DisplayFor(model => model.LoanInterestIncomeGl.AccountName)
                }
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayName("Loan Interest Receivable GL Account")
            </td>

